<Page x:Class="UrbanAce_7.FullScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UrbanAce_7"
      mc:Ignorable="d" Loaded="Page_Loaded"
      d:DesignHeight="600" d:DesignWidth="500"
      Title="FullScreen">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="ArrowRenderer"/>
        <TextBlock x:Name="FloorText" Text="1" Grid.Row="1" FontFamily="Segoe UI" FontWeight="SemiBold"
                   FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="256"/>
    </Grid>
</Page>
